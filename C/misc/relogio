#import <stdio.h>
#import <stdlib.h>
#include <TIME.h>

main(){
    int horas=00;
    int minutos =00;
    int segundos =00;
    for(segundos = 0; segundos <= 60;)
    {
        if(segundos == 60){
            segundos = 0;
            ++minutos;
            if(minutos == 60){
                minutos = 0;
                ++horas;
                if(horas == 24){
                    horas = 0;
                }
            }
        }
        if(horas < 10){
            printf("0%d:", horas);
        }
        else{
            printf("%d:",horas);
        }
        if(minutos < 10){
            printf("0%d:", minutos);
        }
        else{
            printf("%d:", minutos);
        }
        if(segundos < 10){
            printf("0%d\n", segundos);
        }
        else{
            printf("%d\n", segundos);
        }
        // TIMER COMEï¿½A AQUI
        sleep(1);
        ++segundos;
    }
    return 0;
}
